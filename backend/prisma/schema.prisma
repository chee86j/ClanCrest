generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  googleId  String?  @unique
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  persons   Person[]
}

model Person {
  id                Int            @id @default(autoincrement())
  name              String
  nameZh            String?
  gender            String?
  notes             String?
  imageId           Int?
  positionX         Float?
  positionY         Float?
  userId            Int?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  user              User?          @relation(fields: [userId], references: [id])
  relationshipsFrom Relationship[] @relation("FromRelationships")
  relationshipsTo   Relationship[] @relation("ToRelationships")
}

model Relationship {
  id        Int      @id @default(autoincrement())
  fromId    Int
  toId      Int
  type      String
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  from      Person   @relation("FromRelationships", fields: [fromId], references: [id], onDelete: Cascade)
  to        Person   @relation("ToRelationships", fields: [toId], references: [id], onDelete: Cascade)

  @@unique([fromId, toId])
}
