generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Person {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  chineseName String?
  birthDate   DateTime?
  gender      String
  adopted     Boolean  @default(false)
  relationshipsFrom Relationship[] @relation("From")
  relationshipsTo   Relationship[] @relation("To")
}

model Relationship {
  id       String   @id @default(cuid())
  fromId   String
  toId     String
  type     String   // 'parent', 'spouse', 'sibling', etc.
  pathType String?  // 'biological', 'adopted', 'step', etc.
  from     Person   @relation("From", fields: [fromId], references: [id])
  to       Person   @relation("To", fields: [toId], references: [id])
} 